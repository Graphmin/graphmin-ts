{
	"compilerOptions": {
		"baseUrl":                      "./src",
		"outDir":                       "./lib",
		"rootDir":                      "./src",
		"module":                       "CommonJS",
		"moduleResolution":             "node",
		"esModuleInterop":              true,
		"noImplicitAny":                false,
		"removeComments":               true,
		"preserveConstEnums":           true,
		"strict":                       false,
		"pretty":                       false,
		"strictPropertyInitialization": false,
		"experimentalDecorators":       true,
		"emitDecoratorMetadata":        true,
		"target":                       "ES2022",
		"lib":                          [
			"ES2015.Reflect",
			"ESNext"
		],
		"sourceMap":                    true,
		"skipLibCheck":                 true,
		"paths":                        {

		}
	},
	"ts-node":         {
		/* / Run "npm i -D tsconfig-paths" in order to use */
		"require": [
			"tsconfig-paths/register"
		],
		"files":   false
	},
	"include":         [
		"./src/**/*.ts"
	],
	"exclude":         [
		"node_modules",
		",/node_modules",
		"lib",
	]
}
